@model IEnumerable<MvcNetCorePrcaticaEmpleadosRegistro.Models.Departamento>

@{
    ViewData["Title"] = "Index";
}

<table class="table table-danger">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdDepartamento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Localidad)
            </th>
            <th>Detalles</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdDepartamento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Localidad)
            </td>
            <td>
                <a asp-controller="Practica" asp-action="Details" asp-route-idDepartamento="@item.IdDepartamento" class="btn btn-outline-dark">Ver detalles</a>
            </td>
        </tr>
}
    </tbody>
</table>
